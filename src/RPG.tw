using Godot;

Ready(){
    AddCamera(new Vector3(4,4,4), new Vector3(0,0,0));
    AddLight(new Vector3(-5,5,5), new Vector3(0,0,0));
    global box1 = AddBox(new Vector3(0,0,0), new Vector3(1,1,0.5), new Color(1,0,0,1));
    global box2 = AddBox(new Vector3(2,2,0), new Vector3(1,1,1), new Color(0,0,1,1));
}

Input(event){
    Translate(box1, new Vector3(-0.1,0,0));
    Translate(box2, new Vector3(0.05,0,0));
}